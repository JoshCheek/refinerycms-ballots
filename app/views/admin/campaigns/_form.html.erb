<script src="/javascripts/refinerycms-campaigns.js" type="text/javascript"></script> 

<%= form_for [:admin, @campaign] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @campaign,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest'  -%>
  </div>

  <% @campaign.offices.build %>
  <%= f.fields_for :offices do |builder| %>
    <%= render 'office_fields', :f => builder %>
  <% end %>
  
  <p><%= link_to_add_fields "Add Office", f, :offices %></p>  
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.campaigns.campaign'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @campaign.title)
              } %>
<% end -%>

